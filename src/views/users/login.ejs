<!DOCTYPE html>
<html lang="es">

    <%- include ('../partials/head', { title: "Login" }) %>

<body class="body">
    <main class="main--registro-login animate__animated animate__fadeInDown">
        <form action="" method="POST" class="form-contenedor" id="form-login">
            <div class="logo">
                <a href="/"><img src="/images/logo/Game-Soul.png" class="logo-img"></a>
            </div>

            <section class="form__primera-seccion">
                <span class="form__subtitulo-span">REGISTRATE O INICIA SESIÓN CON TUS REDES SOCIALES</span>
                <ul class="lista-iconos-redes">
                    <li class="iconos-redes"><a href="#"><i class="fab fa-facebook"></i></a></li>
                    <li class="iconos-redes"><a href="#"><i class="fab fa-twitter-square"></i></a></li>
                    <li class="iconos-redes"><a href="#"><i class="fab fa-instagram"></i></a></li>
                </ul>
            </section>

            <section class="form">
                <div class="form__contenedor-subtitulos">
                    <span class="form__subtitulo-login">¿No tenés una cuenta?</span>
                    <span><a href="/users/register" class="form__subtitulo-a">Crear cuenta</a></span>
                </div>

                

                <div class="form__contenedor-inputs">
                    <div class="form__cont">
                        <label for="email">E-mail:</label>
                        <input type="text" id="email" class="form__inputs" name="email" value="<%= locals.oldData ? oldData.email : null %>">
                        <% if(locals.errors && errors.email){ %> 
                            <div class="text-danger">
                                <%= errors.email.msg %> 
                            </div>
                        <% } %>
                        <div class="errores-login">
                            <ul id = 'errorEmail' class="text-danger">
                            </ul>
                        </div>
                    </div>

                    <div class="form__cont">
                        <label for="password">Contraseña:</label>
                        <input type="password" id="password" class="form__inputs" name="password">
                        <% if(locals.errors && errors.password){ %> 
                            <div class="text-danger">
                                <%= errors.password.msg %>
                            </div>
                        <% } %> 
                        <div class="errores-login">
                            <ul id="errorPassword" class="text-danger">
                            </ul>
                        </div>
                    </div>
                </div>
                
    
                <div class="form__contenedor-subtitulos">
                    <div class="form__contenedor-recuerdame-tyc">
                        <input type="checkbox" id="recuerdame" name="recuerdame" class="form__boton-checkbox">
                        <label for="recuerdame" class="form__recuerdame-tyc">Recuérdame</label>
                    </div>
    
                    <div class="form__contenedor-a">
                        <a href="#" class="form__a">¿Olvidaste tu contraseña?</a>
                    </div>
                </div>
    
                <div class="form__cont-login-iniciar-sesion">
                    <button type="submit" value="Iniciar Sesión" class="button-crearCuenta-iniciarSesion">Iniciar sesion</button>
                </div>
            </section>
        </form>
    </main>

    <%- include ('../partials/footer') %>
    <script src="/js/validations/login.js"></script>

</body>
</html>